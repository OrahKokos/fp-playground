{
  "extends": "./src/path-resolution.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "lib": [
      "ESNext"
    ],
    "allowJs": false,
    "checkJs": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*.ts",
    "./tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}